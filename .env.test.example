# E2E Test with Real APIs Configuration
# Copy to .env.test and fill with real values

# Test Mode
E2E_TEST_MODE=real
E2E_MOCK_EXTERNAL_APIS=false

# Google OAuth (Service Account for E2E)
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=./credentials/google-service-account.json
GOOGLE_TEST_USER_EMAIL=e2e-test@geulpi.com
GOOGLE_TEST_USER_REFRESH_TOKEN=your_refresh_token

# Google APIs - Real Keys
GOOGLE_MAPS_API_KEY=your_real_maps_key
GOOGLE_PLACES_API_KEY=your_real_places_key
GOOGLE_CALENDAR_API_KEY=your_real_calendar_key
GOOGLE_SPEECH_TO_TEXT_API_KEY=your_real_speech_key
GOOGLE_VISION_API_KEY=your_real_vision_key

# Google Test Calendar ID (dedicated for E2E)
GOOGLE_TEST_CALENDAR_ID=e2e-test-calendar@group.calendar.google.com

# OpenAI - Real API with usage limits
OPENAI_API_KEY=your_real_openai_key
OPENAI_MODEL=gpt-4-1106-preview
OPENAI_MAX_TOKENS_PER_TEST=1000
OPENAI_RATE_LIMIT_PER_MINUTE=10

# Test Database (separate from dev)
POSTGRES_HOST=postgres-test
POSTGRES_PORT=5432
POSTGRES_DB=geulpi_e2e
POSTGRES_USER=geulpi_test
POSTGRES_PASSWORD=test_password

# Redis Test Instance
REDIS_HOST=redis-test
REDIS_PORT=6379
REDIS_DB=1

# Test Data Cleanup
CLEANUP_AFTER_TEST=true
PRESERVE_FAILED_TEST_DATA=true